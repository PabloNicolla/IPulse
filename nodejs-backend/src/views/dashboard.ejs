<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/output.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="/images/novablog-logo.png" />
    <title><%= title %></title>
  </head>
  <body>
    <div class="drawer lg:drawer-open">
      <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col items-center justify-center">
        <!-- Page content here -->
        <%- include('partials/drawer-footer', {user: user}) %>
        <!-- Page specific content goes here -->

        <!-- search bar -->
        <div class="flex min-w-full justify-center p-8">
          <div class="form-control w-full max-w-xl">
            <div class="input-group flex">
              <input
                type="text"
                placeholder="Searchâ€¦"
                class="input input-bordered w-full flex-grow bg-base-200 text-primary"
                id="search-input"
              />

              <button
                id="search-button"
                class="btn btn-square flex-shrink-0 bg-primary text-primary-content hover:bg-primary-content hover:text-primary"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                  />
                </svg>
              </button>
            </div>
            <div
              id="search-dropdown"
              class="dropdown hidden w-full bg-base-100 text-primary shadow-lg"
            ></div>
          </div>
        </div>

        <!-- Table -->
        <div>
          <div class="overflow-x-auto">
            <table class="table w-full">
              <!-- head -->
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Badges</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <!-- Dynamically generate rows from cards data -->
                <% cards.forEach(function(card, index) { %>
                <tr>
                  <th>
                    <label>
                      <input type="checkbox" class="checkbox" />
                    </label>
                  </th>
                  <td>
                    <div class="flex items-center gap-3">
                      <div class="avatar">
                        <div class="mask mask-squircle h-12 w-12">
                          <img src="<%= card.imgSrc %>" alt="Card Image" />
                        </div>
                      </div>
                      <div>
                        <div class="font-bold"><%= card.title %></div>
                        <div class="badge badge-secondary">NEW</div>
                      </div>
                    </div>
                  </td>
                  <td><%= card.description %></td>
                  <td>
                    <% card.badges.forEach(function(badge) { %>
                    <div class="badge badge-outline"><%= badge %></div>
                    <% }); %>
                  </td>
                  <th>
                    <button class="btn btn-ghost btn-xs">details</button>
                  </th>
                </tr>
                <% }); %>
              </tbody>
              <!-- foot -->
              <tfoot>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Badges</th>
                  <th></th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>

        <!-- Pagination Buttons -->
        <div class="m-8 flex justify-center">
          <div class="flex">
            <div class="join">
              <% if (currentPage - 1 > 1) {%>
              <a
                href="/dashboard?q=<%= cQuery %>&page=1"
                class="bg:hover:bg-primary-content btn join-item bg-primary text-primary-content hover:text-primary"
                ><%= 1 %></a
              >
              <% } if (currentPage - 1 > 2) {%>
              <button
                class="bg:hover:bg-primary-content btn join-item bg-primary text-primary-content hover:text-primary"
              >
                ...
              </button>
              <% } %> <% for(let i = currentPage - 1; i <= currentPage + 1 && i
              <= totalPages; i++) { if (i < 1) continue; %>
              <a
                href="/dashboard?q=<%= cQuery %>&page=<%= i %>"
                class="<%= currentPage === i ? 'btn-active' : '' %> bg:hover:bg-primary-content btn join-item bg-primary text-primary-content hover:text-primary"
                ><%= i %></a
              >
              <% } if (currentPage + 2 <= totalPages) {%>
              <button
                class="bg:hover:bg-primary-content btn join-item bg-primary text-primary-content hover:text-primary"
              >
                ...
              </button>
              <a
                href="/dashboard?q=<%= cQuery %>&page=<%= totalPages %>"
                class="bg:hover:bg-primary-content btn join-item bg-primary text-primary-content hover:text-primary"
                ><%= totalPages %></a
              >
              <% } %>
            </div>
          </div>
        </div>

        <%- include('partials/footer') %>
      </div>
      <div class="drawer-side z-50">
        <label
          for="my-drawer-2"
          aria-label="close sidebar"
          class="drawer-overlay"
        ></label>
        <ul class="menu min-h-full w-80 bg-base-200 p-4 text-base-content">
          <!-- Sidebar content here -->

          <div class="xl:hidden">
            <li><a href="/homepage">Homepage</a></li>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/blog">Blog</a></li>
            <li><a href="/about%20us">About us</a></li>
          </div>

          <li><a class="btn btn-outline mt-8">Upload New Image</a></li>
          <li><a class="btn btn-outline mt-4">Delete Selected</a></li>
          <li><a class="btn btn-outline mt-4">Publish Selected</a></li>
          <li><a class="btn btn-outline mt-4">Unpublish Selected</a></li>
        </ul>
      </div>
    </div>

    <script type="module" src="js/dashboard.js"></script>
    <script type="module" src="js/search-recommendations.js"></script>
  </body>
</html>
